            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/prueba?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
